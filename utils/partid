#!/usr/bin/env bash

partid() {
  local found=0
  local type="$2"
  local disk="$1"
  local length=${#disk}
  local info=
  local line=
  if [ "$type" = "" ]; then
    if [ "$(blkid -o value "$disk")" = "" ]; then
      lsblk --output NAME,FSTYPE,UUID "$disk"
    else
      for info in $(blkid); do
        if [ "${info:0:$length}" = "$disk" ]; then
          blkid "${info:0:-1}"
        fi
      done
    fi
  else
    for info in $(lsblk --output FSTYPE,UUID "$disk"); do
      if [ "$info" = "$type" ]; then
        found=1
      elif [ "$found" = "1" ]; then
        echo $info
        break
      fi
    done
  fi
}

if [ "$1" = "--help" ] || [ "$1" = "-h" ] || [ "$1" = "" ]; then
  echo ''
  echo 'example:'
  echo '  partid /dev/sda vfat'
  echo '  partid /dev/mmcblk0 swap'
  echo '  partid /dev/sda ext4'
  echo ''
else
  partid "$1" "$2"
fi
