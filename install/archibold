#########################

if [ "$(which sudo 2> /dev/null)" = "" ]; then
  bash <(curl -s archibold.io/install/sudo)
fi

cd /tmp
curl -LO archibold.io/utils/archibold
echo 'archibold "$@"' >> archibold
chmod a+x archibold
sudo mv archibold /usr/bin
