# archibold.io (C) 2016 #
#########################

source <(curl -s archibold.io/install/gpu)

echoWithHeader "
  Installing GNOME
"

echo $GPU_DRIVERS

exit

sudo pacman  --needed --noconfirm \
    $GPU_DRIVERS \
    gnome gnome-software gnome-tweak-tool networkmanager xf86-input-libinput

echoWithHeader "
  Enabling NetworkManager and GDM
"
sudo systemctl enable NetworkManager
sudo systemctl enable gdm

if [ "$GPU_DRIVERS" = "xf86-video-fbdev" ] && [ -f /etc/gdm/custom.conf ] && [[ "$(cat /etc/gdm/custom.conf | grep -s "^WaylandEnable=false")" = "" ]]; then
  echoWithHeader "
  Enforcing X11 via GDM"
  echo 'WaylandEnable=false' >> /etc/gdm/custom.conf
fi
